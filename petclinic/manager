#ver 7

yum update -y 
yum install jre-1.8.0 -y
echo "$(date) INFO: petclinic Starting Service..." 

firewall-cmd --zone=public --add-port=8080/tcp
firewall-cmd --zone=public --add-port=80/tcp
firewall-cmd --zone=public --add-port=443/tcp

mv /opt/remoteFiles/appPackage/petclinic.service /usr/lib/systemd/system/
systemctl daemon-reload
systemctl enable petclinic.service 
systemctl start petclinic.service 

